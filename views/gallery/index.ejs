<%- include("../partials/header") %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome To Picture Gallery 2020!</h1>
            <p>View picture uploaded from all over the world during 2020.</p>
            <p>
               <a class="btn btn-primary btn-large" href="/gallery/new">Add New Image</a>
            </p>
        </div>
    </header>
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
       <% gallery.forEach(function(gallery){ %>
           <div class="col-md-3 col-sm-6">
               <div class="thumbnail">
                  <img src="<%= gallery.image %>">
                  <div class="caption">
                      <h4><%= gallery.name %></h4>
                  </div>
                  <p>
                      <a href="/gallery/<%= gallery._id %>" class="btn btn-primary">More Info</a>
                  </p>
               </div>
           </div>
       <% }); %>
   </div>
</div>
<%- include("../partials/footer") %>
